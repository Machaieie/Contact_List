@model CRUD_MVC_PhoneList.Models.Person

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Excluir</h1>

<h3 class="text-center">Tem certeza de que deseja excluir Este Contacto?</h3>
<div>
    
    <div class="d-flex justify-content-center align-items-center border border-primary p-5 rounded text-center w-50 mt-5 m-auto">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Number)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Number)
            </dd>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="ID" />
                <input type="submit" value="Excluir" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-success">Voltar</a>
            </form>
        </dl>

        
    </div>
    
    
</div>
